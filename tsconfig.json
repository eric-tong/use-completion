{
    "compilerOptions": {
      "lib": [
        "ESNext",
        "dom"
      ], 
      "outDir": "lib", 
      "removeComments": true, 
      "target": "ES6", 
      
      "baseUrl": "./", 
      "esModuleInterop": true, 
      "moduleResolution": "node", 
      "paths": {}, 
      
      "sourceMap": true, 
      "sourceRoot": "../src", 
      
      "alwaysStrict": true, 
      "allowUnreachableCode": false, 
      "noImplicitAny": true, 
      "strictNullChecks": true, 
      
      "noImplicitReturns": true,
      "noUncheckedIndexedAccess": true, 
      "noUnusedLocals": true, 
      "noUnusedParameters": true,

      "declaration": true
    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "node_modules/**/*",
      "**/*.test.ts"
    ]
  }